<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>netcoreapp3.1</TargetFramework>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <Title>.NET 3.1 Core command line app/dotnet tool to run XSLT 3.0 using Saxon 10.8 HE</Title>
    <Version>10.8.0-alpha1</Version>
    <Authors>Martin Honnen</Authors>
    <Description>This is a .NET Core 3.1 command line app/dotnet tool to run XSLT 3.0 with Saxon 10.8 HE.</Description>
    <Copyright>Copyright (c) 2022 Martin Honnen</Copyright>
    <PackageReleaseNotes>This is the initial alpha release.</PackageReleaseNotes>
    <PackAsTool>True</PackAsTool>
    <PackageLicenseExpression>MPL-2.0</PackageLicenseExpression>
    <PackageRequireLicenseAcceptance>True</PackageRequireLicenseAcceptance>
    <PackageTags>XSLT;XSLT-3.1;XML;JSON;transformation</PackageTags>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\SaxonHE10Net31Api\SaxonHE10Net31Api.csproj" />
  </ItemGroup>

</Project>
