<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netcoreapp3.1</TargetFramework>
    <ProduceReferenceAssembly>True</ProduceReferenceAssembly>
    <GenerateDocumentationFile>True</GenerateDocumentationFile>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <Title>Saxon HE 10.8 .NET 3.1 Core API</Title>
    <Version>10.8.0-alpha5</Version>
    <Authors>Martin Honnen</Authors>
    <Description>This is a port of the Saxon 10.8 .NET framework API to .NET Core 3.1.</Description>
    <Copyright>Copyright (c) 2022 Martin Honnen</Copyright>
    <PackageTags>XSLT;XSLT-3.0;XQuery;XQuery-3.1;XPath;XPath-3.1;XML;JSON;Transformation</PackageTags>
    <PackageReleaseNotes>This is the initial alpha release.</PackageReleaseNotes>
    <PackageLicenseExpression>MPL-2.0</PackageLicenseExpression>
    <PackageRequireLicenseAcceptance>True</PackageRequireLicenseAcceptance>
    <PackageReadmeFile>README.md</PackageReadmeFile>
	<PackageProjectUrl>https://github.com/martin-honnen/SaxonHE10Net31/tree/master/SaxonHE10Net31Api</PackageProjectUrl>
	<RepositoryUrl>https://github.com/martin-honnen/SaxonHE10Net31/tree/master/SaxonHE10Net31Api</RepositoryUrl>
  </PropertyGroup>

  <ItemGroup>
	<PackageReference Include="IKVM.Maven.Sdk" Version="1.0.1" />
	<MavenReference Include="net.sf.saxon:Saxon-HE" Version="10.8" />
  </ItemGroup>
	
  <ItemGroup>
    <PackageReference Include="SaxonHE10Net31" Version="10.8.0-alpha5" />
  </ItemGroup>

  <!--<ItemGroup>
    <ProjectReference Include="..\SaxonHE10Net31\SaxonHE10Net31.msbuildproj" />
  </ItemGroup>-->

  <ItemGroup>
    <None Update="README.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

</Project>
